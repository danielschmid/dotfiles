# Author info for npm init
init-author-name=Daniel Schmid
init-author-email=daniel@danielschmid.com
init-license=MIT
init-version=1.0.0

# Package installation preferences
save-exact=true              # Save exact versions (no ^ or ~)
package-lock=true            # Generate package-lock.json
fund=false                   # Don't show funding messages

# Registry settings (usually default is fine)
registry=https://registry.npmjs.org/

# Optional: Set npm cache location
# cache=/Users/daniel/.npm

# Optional: Audit settings
audit-level=moderate         # Show moderate and high vulnerabilities
